.container {
  background-color: #7ec8e3;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 20px;
  box-sizing: border-box;
}

.button {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 10px;
  margin-bottom: 20px;
  padding: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.icon {
  width: 50px;
  height: 50px;
  margin-right: 10px;
}

.text {
  flex: 1;
  font-size: 18px;
}

.arrow {
  font-size: 18px;
  color: #64bbcf;
}

.tip-btn {
  position: relative;
}

.tip-btn .tip {
  position: absolute;
  margin-right: 8px;
  font-size: 14px;
  font-weight: bold;
  color: red;
  right: 0;
}

.login-bg {
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
}

.login-bg .login-card {
  position: fixed;
  top: 25%;
  left: 10%;
  background-color: #fff;
  width: 80%;
  border-radius: 5px;
  padding: 16px;
  box-sizing: border-box;
}

.login-bg .login-card .title {
  font-size: 22px;
  padding-bottom: 16px;
  padding-left: 8px;
  border-bottom: 1px solid #ccc;
  display: flex;
  justify-content: center;
}

.login-bg .login-card .summary {
  padding: 8px;
}

.login-bg .login-card .login-btn {
  width: 128px;
  font-size: 14px;
  margin-top: 48px;
  color: #FFF;
  background-color: #00b26a;
}
.login-bg .login-card .userInfo {
  display: flex;
  align-items: center;
  margin-left: 16px;
  margin-top: 16px;
}

.custom-btn {
  -webkit-tap-highlight-color: transparent;
  background-color: #f8f8f8;
  border-radius: 5px;
  box-sizing: border-box;
  color: #000;
  cursor: pointer;
  display: block;
  font-size: 18px;
  line-height: 2.55555556;
  margin-left: auto;
  margin-right: auto;
  overflow: hidden;
  padding-left: 14px;
  padding-right: 14px;
  position: relative;
  text-align: center;
  text-decoration: none;
}

.mybtn {
  height: 45px;
  color: #000;
  border: 1px solid #ddd;
  margin: 16px 0;
}
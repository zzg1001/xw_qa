.container {
  background-color: #7ec8e3;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  box-sizing: border-box;
}

.header-image {
  width: 100px;
  height: auto;
  margin-bottom: 10px;
}

.title {
  text-align: center;
  font-size: 24px;
  margin: 10px 0;
}

.result-table {
  background-color: #fff;
  border-radius: 10px;
  padding: 15px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  width: 90%;
  max-width: 400px;
  margin-bottom: 20px;
}

.subtitle {
  font-size: 18px;
  margin-bottom: 10px;
}

.table {
  width: 100%;
  border-collapse: collapse;
}

.table-row {
  display: flex;
  justify-content: space-between;
}

.table-cell {
  flex: 1;
  padding: 5px;
  border: 1px solid #ccc;
  text-align: center;
}

.score {
  font-size: 18px;
  margin: 10px 0;
}

.back-button {
  background-color: #fff;
  border-radius: 10px;
  padding: 10px 20px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  font-size: 18px;
  color: #000;
  width: 90%;
  max-width: 400px;
}
.container {
  background-color: #7ec8e3;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  box-sizing: border-box;
}

.header-image {
  width: 100px;
  height: auto;
  margin-bottom: 10px;
}

.title {
  text-align: center;
  font-size: 24px;
  margin: 10px 0;
}

.tabs {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 10px;
}

.tab {
  font-size: 18px;
  padding: 5px 10px;
  cursor: pointer;
}

.active {
  border-bottom: 2px solid #000;
}

.ranking-list {
  background-color: #fff;
  border-radius: 10px;
  padding: 15px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 400px;
  flex: 1;
  overflow-y: auto;
}

.ranking-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.medal, .avatar {
  width: 40px;
  height: 40px;
  margin-right: 10px;
}

.rank {
  width: 40px;
  text-align: center;
  margin-right: 10px;
}

.name {
  flex: 1;
  font-size: 16px;
}

.score {
  font-size: 16px;
  color: #7ec8e3;
}